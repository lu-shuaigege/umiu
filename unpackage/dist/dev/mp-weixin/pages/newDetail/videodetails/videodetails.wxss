.mask-screen {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: #000;
	opacity: 0.5;
	overflow: hidden;
	z-index: 9;
}
.region-box {
	width: 100%;
	overflow: scroll;
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 10;
	background: #fff;
	padding-top: 20rpx;
	height: 712rpx;
	padding: 40rpx 30rpx 48rpx 30rpx;
	box-sizing: border-box;
