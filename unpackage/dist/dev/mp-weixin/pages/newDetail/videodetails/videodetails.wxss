.videodetails{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.8);
    position: relative;
}
.videodetails_video{
    width: 100%;
	height: 100vh;
}
.videodetails_video video{
    width: 100%;
    outline-style: none;
	height: 100vh;
}
.author{
    position: absolute;
    left: 30rpx;
    bottom: 150rpx;
}
.author .author_top{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.author .author_top image{
    width: 54rpx;
    height: 54rpx;
    background-color: #000000;
    border-radius: 27rpx;
    border-radius: 50%;
    /* border: solid 2upx rgba(255, 255, 255, 1); */
}
.author .author_top view{
    font-size: 28rpx;
    font-weight: bold;
    color: #ffffff;
    margin-left: 15rpx;
}
.author_under{
    font-size: 28rpx;
    color: #ffffff;
    margin-top: 30rpx;
}
.right{
    position: absolute;
    right: 30rpx;
    bottom: 225rpx;
}
.right .one{
    text-align: center;
    margin-top: 30rpx;
}
.right .one image{
    width: 60rpx;
    height: 57rpx;
}
.right .one view{
    font-size: 24rpx;
    color: #ffffff;
}
.play{
    position: absolute;
    left: 50%;
    top:50%;
    -webkit-transform:translate(-50%,-50%);
            transform:translate(-50%,-50%);
    width: 93rpx;
    height: 93rpx;
}
.comments{
    /* width: 750upx; */
    min-height: 590rpx;
    background-color: #ffffff;
    /* margin-top: 20upx; */
    margin-bottom: 30rpx;
}
.comments .title{
    text-align: center;
    font-size: 28rpx;
    font-weight: bold;
    color: #999999;
}
.comments .title .close{
    width: 90rpx;
	height: 60rpx;
	padding: 0 30rpx 30rpx 30rpx;
	float: right;
}
.comments .title text{
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
}
.comments_list{
    width: 690rpx;
    margin: 0 auto;
}
.comments_list .listone{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    margin-top: 37.5rpx;
    margin-bottom: 22rpx;
}
.comments_list .listone .headimage{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    border: solid 2rpx rgba(255, 102, 0, 0.5);
}
.comments_list .listone .con{
    width: 508rpx;
}
.comments_list .listone .con .p{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.comments_list .listone .con .p .name{
    font-size: 26rpx;
    max-width: 338rpx;
    font-weight: bold;
    color: #28282c;
    overflow:hidden; 
    text-overflow:ellipsis; 
    white-space:nowrap;
}
.comments_list .listone .con .p .time{
    font-size: 22rpx;
    font-weight: 300;
    color: #999999;
    margin-left: 20rpx;
}
.comments_list .listone .con .comment{
    font-size: 28rpx;
    font-weight: 300;
    line-height: 42rpx;
    color: #666666;
    margin-top: 15rpx;
}
.comments_list .listone .vote{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.comments_list .listone .vote image{
    width: 34rpx;
    height: 34rpx;
}
.comments_list .listone .vote view{
    font-size: 22rpx;
    color: #28282c;
    margin-left: 9rpx;
}
.listone_iner{
    width: 562rpx;
    background-color: #f8f8f8;
    border-radius: 8rpx;
    margin-left: 83rpx;
    padding: 8rpx 21rpx;
}
.listone_inerp{
    margin-top: 30rpx;
}
.listone_inerp .listone .headimage{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: solid 2rpx rgba(255, 102, 0, 0.5);
}
.listone_inerp .listone .con{
    width: 412rpx;
}
.listone_inerp .listone .con .p .name{
    max-width: 240rpx;
}
.none{
    width: 100%;
    text-align: center;
}
.none image{
    width: 262rpx;
    margin-top: 75rpx;
}
#durationbar{
    position: absolute;
    /* background: rgba(255, 255, 255,0.5); */
    bottom:75rpx;
    width: 100%;
}
#positionBar{
    background: #fff;
    width: 100%;
}
.cu-progress.xs {
	height: 4rpx;
	background: #666;
}
.lookall{
	  font-size:28rpx;
	  color: #999;
	  text-align: center;
	  margin-top: 40rpx;
}
