page{
	background: #FFFFFF;
}
.login{
	text-align: center;
}
.login .logo{
	width: 134rpx;
	height: 212rpx;
	margin-top: 50rpx;
	margin-bottom: 53rpx;
}
.login input{
	width: 690rpx;
	height: 90rpx;
	background-color: #f8f8f8;
	border-radius: 45rpx;
	margin-top: 40rpx;
	text-align: left;
	padding-left: 100rpx;
}
.login .tel{
	position: relative;
	width: 690rpx;
	height: 90rpx;
	background-color: #f8f8f8;
	margin-left: 30rpx;
	border-radius: 45rpx;
}
.login .yzm button{
	width: 300rpx;
	height: 90rpx;
	line-height: 90rpx;
	background: transparent;
	border: none;
	outline-style: none;
	position: absolute;
	top: 0;
	right: 0;
	z-index: 1;
	color: #ff6600;
	font-size: 28rpx;
	text-align: right;
}
.login .yzm .disabled{
	color: #999;
}
.login .yzm .line{
	width: 1px;
	height: 40rpx;
	background: #ff6600;
	position: absolute;
	z-index: 1;
	right: 250rpx;
	top: 25rpx;
}
.login .tel image{
	position: absolute;
	width: 50rpx;
	height: 50rpx;
	z-index: 1;
	top: 20rpx;
	left: 30rpx;
}
.login .yzm{
	position: relative;
	width: 690rpx;
	height: 90rpx;
	background-color: #f8f8f8;
	margin-left: 30rpx;
	border-radius: 45rpx;
}
.login .yzm input{
	width: 390rpx;
	height: 90rpx;
	background-color: #f8f8f8;
	border-radius: 45rpx;
}
.login .yzm image{
	position: absolute;
	width:50rpx;
	height: 50rpx;
	z-index: 1;
	top: 20rpx;
	left: 30rpx;
}
.login .submit{
	width: 690rpx;
	height: 90rpx;
	line-height: 90rpx;
	background-image: -webkit-gradient(linear, 
		left bottom, left top, 
		from(#ff6600), 
		to(#ff8532));
	background-image: -webkit-linear-gradient(bottom, 
		#ff6600 0%, 
		#ff8532 100%);
	background-image: linear-gradient(0deg, 
		#ff6600 0%, 
		#ff8532 100%);
	border-radius: 45rpx;
	margin-top: 60rpx;
	font-size: 30rpx;
	color: #ffffff;
}
input::-webkit-input-placeholder {
  color: #999;
  font-weight: 300;
  font-size: 28rpx;
}
input::-moz-input-placeholder {
	color: #999;
	font-weight: 300;
	font-size: 28rpx;
}
input::-ms-input-placeholder {
	color: #999;
	font-weight: 300;
	font-size: 28rpx;
}
button::after {
  border: none
}

