}
.listone_inerp{
    margin-top: 30rpx;
}
.listone_inerp .listone .headimage{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: solid 2rpx rgba(255, 102, 0, 0.5);
}
.listone_inerp .listone .con{
    width: 412rpx;
}
.listone_inerp .listone .con .p .name{
    max-width: 240rpx;
}
