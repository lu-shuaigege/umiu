
.guideList {
	width: 100%;
	min-height: 100vh;
	background-color: #ffffff;
	padding: 1rpx 0rpx;
	box-sizing: border-box;
}
.list {
	width: 100%;
	border-bottom: 1px solid #e1e1e1;
}
.item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 38rpx 30rpx;
	box-sizing: border-box;
}
.item_left {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.del {
	width: 34rpx;
	height: 34rpx;
	margin-right: 30rpx;
}
.del_img {
	width: 100%;
	height: 100%;
}
.top_img {
	width: 100rpx;
	height: 100rpx;
	margin-right: 20rpx;
	border-radius: 50%;
	overflow: hidden;
}
.top_img_img {
	width: 100%;
	height: 100%;
}
.title {
	font-family: PingFang-SC-Bold;
	font-size: 30rpx;
	font-weight: bold;
	font-stretch: normal;
	line-height: 30rpx;
	letter-spacing: 0rpx;
	color: #28282c;
}
.phone {
	font-family: PingFang-SC-Medium;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 26rpx;
	letter-spacing: 0px;
	color: #666666;
	margin-top: 20rpx;
}
.item_right {
	width: 151rpx;
	height: 49rpx;
	background-image: -webkit-linear-gradient(215deg, #ff7112 0%, #ff8532 100%), -webkit-linear-gradient(#ff6600, #ff6600);
	background-image: linear-gradient(235deg, #ff7112 0%, #ff8532 100%), linear-gradient(#ff6600, #ff6600);
	background-blend-mode: normal, normal;
	border-radius: 24rpx;
	text-align: center;
	font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 49rpx;
	letter-spacing: 0rpx;
	color: #ffffff;
}

